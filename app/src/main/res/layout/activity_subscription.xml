<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SubscriptionActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/go"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/card_back_btn"
                android:foregroundGravity="center"
                android:padding="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back_icon" />


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lobstertwo_old"
                android:text="Subscribe for fantastic \nrecipes"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/go"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.17"
                app:layout_constraintStart_toEndOf="@+id/go"
                app:layout_constraintTop_toTopOf="@+id/go" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:srcCompat="@drawable/cute_boy" />

            <LinearLayout
                android:id="@+id/linl"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/white_background"
                android:elevation="5dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/imageView7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:elevation="5dp"
                    android:background="@drawable/profile_layout_bg">

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.65"
                        android:fontFamily="@font/lobstertwo_regular"
                        android:gravity="center"
                        android:text="Plans"
                        android:textColor="#0F7016"
                        android:textSize="25sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/plans"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/profile_layout_bg"
                    android:elevation="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textVie31"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_weight="0.65"
                        android:fontFamily="@font/lobstertwo_regular"
                        android:gravity="center_vertical"
                        android:text="Basic"
                        android:textColor="#0F7016"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/tv32"
                        android:layout_width="wrap_content"
                        android:layout_height="47dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="25dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/lobstertwo_regular"
                        android:gravity="center_vertical"
                        android:text="50Rs"
                        android:hint=""
                        android:textColor="#5b5b5b"
                        android:textSize="25sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/plansv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/profile_layout_bg"
                    android:elevation="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_weight="0.65"
                        android:fontFamily="@font/lobstertwo_regular"
                        android:gravity="center_vertical"
                        android:text="Advancd"
                        android:textColor="#0F7016"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/tv33"
                        android:layout_width="wrap_content"
                        android:layout_height="47dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="25dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/lobstertwo_regular"
                        android:gravity="center_vertical"
                        android:text="75Rs"
                        android:hint=""
                        android:textColor="#5b5b5b"
                        android:textSize="25sp" />

                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/white_background"
                android:elevation="5dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/linl">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:elevation="5dp"
                    android:background="@drawable/profile_layout_bg">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.65"
                        android:fontFamily="@font/lobstertwo_regular"
                        android:gravity="center"
                        android:text="Subscription Status"
                        android:textColor="#0F7016"
                        android:textSize="25sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/profile_layout_bg"
                    android:elevation="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_weight="0.65"
                        android:fontFamily="@font/lobstertwo_regular"
                        android:gravity="center_vertical"
                        android:text="Status"
                        android:textColor="#0F7016"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/methods"
                        android:layout_width="wrap_content"
                        android:layout_height="47dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="25dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/lobstertwo_regular"
                        android:gravity="center_vertical"
                        android:text=""
                        android:hint=""
                        android:textColor="#5b5b5b"
                        android:textSize="25sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
